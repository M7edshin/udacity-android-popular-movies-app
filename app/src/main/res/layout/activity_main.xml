<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout_main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="m7edshin.popularmovieapp.MovieDetailsActivity">


    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/pager_sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:pstsTabTextColor="@color/colorWhite"
        app:pstsIndicatorColor="@color/colorAccent"
        app:pstsTabTextSize="12sp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
